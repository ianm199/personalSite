---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="About - Ian McLaughlin" description="About Ian McLaughlin">
  <div class="about-page">
    <h1>About</h1>
    <p class="tagline">Exploring Technology in NYC</p>

    <section class="section">
      <h2>connect</h2>
      <div class="connect-links">
        <a href="mailto:ianmclaughlin1398@gmail.com">email</a>
        <span class="sep">/</span>
        <a href="https://github.com/ianm199" target="_blank" rel="noopener noreferrer">github</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-page {
    padding: var(--space-xl) 0;
  }

  .about-page h1 {
    margin-bottom: var(--space-sm);
  }

  .tagline {
    color: var(--text-muted);
    margin-bottom: var(--space-2xl);
  }

  .section {
    margin-bottom: var(--space-2xl);
  }

  .section h2 {
    margin-bottom: var(--space-md);
  }

  .connect-links {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .connect-links a {
    color: var(--text-muted);
    border: none;
    transition: color 0.15s;
  }

  .connect-links a:hover {
    color: var(--text-secondary);
  }

  .sep {
    color: var(--text-muted);
  }
</style>
