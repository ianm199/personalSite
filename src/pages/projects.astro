---
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = [
  {
    title: 'Project One',
    description: 'A brief description of what this project does and why it matters.',
    tags: ['TypeScript', 'React'],
    link: 'https://github.com',
    status: 'active',
  },
  {
    title: 'Project Two',
    description: 'Another project with its own unique purpose and technology stack.',
    tags: ['Python', 'FastAPI'],
    link: 'https://github.com',
    status: 'completed',
  },
  {
    title: 'Project Three',
    description: 'Something experimental or in progress.',
    tags: ['Rust', 'WebAssembly'],
    link: null,
    status: 'wip',
  },
];
---

<BaseLayout title="Projects - Ian McLaughlin" description="Projects by Ian McLaughlin">
  <div class="projects-page">
    <h1>Projects</h1>

    <div class="projects-list">
      {projects.map((project) => (
        <article class="project">
          <div class="project-header">
            <h3>
              {project.link ? (
                <a href={project.link} target="_blank" rel="noopener noreferrer">
                  {project.title} â†—
                </a>
              ) : (
                project.title
              )}
            </h3>
            <span class="status" data-status={project.status}>
              {project.status === 'active' && 'active'}
              {project.status === 'completed' && 'done'}
              {project.status === 'wip' && 'wip'}
            </span>
          </div>
          <p class="project-description">{project.description}</p>
          <div class="project-tags">
            {project.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </article>
      ))}
    </div>
  </div>
</BaseLayout>

<style>
  .projects-page {
    padding: var(--space-xl) 0;
  }

  .projects-page h1 {
    margin-bottom: var(--space-xl);
  }

  .projects-list {
    display: flex;
    flex-direction: column;
  }

  .project {
    padding: var(--space-lg) 0;
    border-bottom: 1px solid var(--border);
  }

  .project:last-child {
    border-bottom: none;
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-md);
    margin-bottom: var(--space-xs);
  }

  .project-header h3 {
    margin: 0;
  }

  .project-header a {
    border: none;
    transition: color 0.15s;
  }

  .project-header a:hover {
    color: var(--text-secondary);
  }

  .status {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .project-description {
    margin: 0 0 var(--space-sm);
    color: var(--text-muted);
    font-size: 0.9rem;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    color: var(--text-muted);
    font-size: 0.75rem;
  }

  .tag::before {
    content: '#';
  }
</style>
