---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  tags?: string[];
  index?: number;
}

const { title, description, pubDate, slug, tags } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : `${import.meta.env.BASE_URL}/`;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<article class="post-card">
  <div class="post-meta">
    <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
  </div>
  <div class="post-content">
    <a href={`${base}blog/${slug}`} class="post-title">
      <h3>{title}</h3>
    </a>
    <p class="post-description">{description}</p>
    {tags && tags.length > 0 && (
      <div class="tags">
        {tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    )}
  </div>
</article>

<style>
  .post-card {
    display: grid;
    grid-template-columns: 100px 1fr;
    gap: var(--space-md);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--border);
  }

  .post-card:last-child {
    border-bottom: none;
  }

  .post-meta time {
    color: var(--text-muted);
    font-size: 0.8rem;
  }

  .post-title {
    border: none;
    display: inline;
  }

  .post-title h3 {
    margin: 0 0 var(--space-xs);
    font-weight: 500;
    display: inline;
  }

  .post-title:hover h3 {
    color: var(--text-secondary);
  }

  .post-description {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .tags {
    margin-top: var(--space-sm);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
  }

  .tag {
    color: var(--text-muted);
    font-size: 0.75rem;
  }

  .tag::before {
    content: '#';
  }

  @media (max-width: 480px) {
    .post-card {
      grid-template-columns: 1fr;
      gap: var(--space-xs);
    }
  }
</style>
